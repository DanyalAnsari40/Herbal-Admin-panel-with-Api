          async function fetchMnpReport() {
            const resultDiv = document.getElementById('mnp-result');
            if (!resultDiv) return;
            // credentials work behind the scenes (hidden from UI)
            const username = 'ALI.RAZA_18O59';
            const password = 'AliRaza@123';
            const locationID = (document.getElementById('mnp-location')?.value || '').trim();
            const year = parseInt(document.getElementById('mnp-year')?.value || '0', 10);
            const month = parseInt(document.getElementById('mnp-month')?.value || '0', 10);

            const errors = [];
            if (!locationID) errors.push('locationID is required');
            if (!(year >= 2017 && year <= 2025)) errors.push('Year must be between 2017 and 2025');
            if (!(month >= 1 && month <= 12)) errors.push('MonthNumber must be 1-12');

            if (errors.length) {
              if (typeof showToast === 'function') showToast(errors.join('\n'), 'error');
              resultDiv.innerHTML = `<div class="text-center text-red-500 py-6"><i class='fas fa-exclamation-triangle text-3xl mb-2'></i><p>${errors.join('<br>')}</p></div>`;
              return;
            }

            resultDiv.innerHTML = '<div class="text-center py-8"><i class="fas fa-spinner fa-spin text-4xl text-blue-600 mb-3"></i><p>Loading M&P QSR report...</p></div>';

            const payload = {
              UserName: username,
              Password: password,
              MonthNumber: month,
              Year: year,
              locationID: locationID
            };

            try {
              const resp = await fetch('https://mnpcourier.com/mycodapi/api/Reports/QSR_Report', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
              });

              const data = await resp.json();

              if (!resp.ok) {
                throw new Error(data?.message || `HTTP ${resp.status}`);
              }

              if (!data || data.isSuccess === false) {
                const msg = data?.message || 'Report request failed';
                if (typeof showToast === 'function') showToast(msg, 'error');
                resultDiv.innerHTML = `<div class="text-center text-red-500 py-8"><i class='fas fa-exclamation-circle text-4xl mb-2'></i><p>${msg}</p></div>`;
                return;
              }

              displayMnpReport(data);
              if (typeof showToast === 'function') showToast('M&P report loaded', 'success');
            } catch (err) {
              console.error('QSR_Report error:', err);
              if (typeof showToast === 'function') showToast(err.message || 'Failed to load report', 'error');
              resultDiv.innerHTML = `<div class="text-center text-red-500 py-8"><i class='fas fa-exclamation-triangle text-4xl mb-2'></i><p>${err.message || 'Failed to load report'}</p></div>`;
            }
          }

          function displayMnpReport(report) {
            const resultDiv = document.getElementById('mnp-result');
            if (!resultDiv) return;

            const details = Array.isArray(report?.Details) ? report.Details : [];
            if (details.length === 0) {
              resultDiv.innerHTML = '<div class="text-center text-gray-500 py-8"><i class="fas fa-search text-4xl mb-3"></i><p>No data found for given filters.</p></div>';
              return;
            }

            const columns = [
              { key: 'consignmentNumber', label: 'Consignment Number' },
              { key: 'BookingDate', label: 'Booking Date' },
              { key: 'OrgZone', label: 'Origin Zone' },
              { key: 'OrgBranch', label: 'Origin Branch' },
              { key: 'consignee', label: 'Consignee' },
              { key: 'orderRefNo', label: 'Order Ref No' },
              { key: 'SERVICE', label: 'Service' },
              { key: 'DESTZONE', label: 'Dest Zone' },
              { key: 'DESTINATION', label: 'Destination' },
              { key: 'WEIGHT', label: 'Weight' },
              { key: 'receivedBy', label: 'Received By' },
              { key: 'TIME', label: 'Time' },
              { key: 'deliveryDate', label: 'Delivery Date' },
              { key: 'CODAmount', label: 'COD Amount' },
              { key: 'PaymentMode', label: 'Payment Mode' },
              { key: 'RRStatus', label: 'RR Status' },
              { key: 'CHEQUENO', label: 'Cheque No' }
            ];

            let html = '';
            html += '<div class="mb-4 text-sm text-gray-700">';
            if (report.AccountNumber) html += `<div><span class='font-semibold'>Account Number:</span> ${report.AccountNumber}</div>`;
            if (report.ClientName) html += `<div><span class='font-semibold'>Client Name:</span> ${report.ClientName}</div>`;
            if (report.message) html += `<div><span class='font-semibold'>Message:</span> ${report.message}</div>`;
            html += '</div>';

            html += "<div class='overflow-x-auto'><table class='min-w-full bg-white border border-gray-200 rounded-lg'>";
            html += "<thead><tr class='bg-gradient-to-r from-blue-600 to-blue-700 text-white'>";
            columns.forEach(col => {
              html += `<th class=\"px-4 py-3 text-left text-xs md:text-sm font-semibold border-b border-blue-600 whitespace-nowrap\">${col.label}</th>`;
            });
            html += "</tr></thead><tbody>";

            details.forEach((item, idx) => {
              const rowClass = idx % 2 === 0 ? 'bg-gray-50' : 'bg-white';
              html += `<tr class=\"${rowClass} hover:bg-gray-100 transition-colors\">`;
              columns.forEach(col => {
                let val = item[col.key];
                if (val === null || val === undefined) val = '';
                html += `<td class=\"px-4 py-3 text-xs md:text-sm text-gray-700 border-b border-gray-200 whitespace-nowrap\">${val}</td>`;
              });
              html += "</tr>";
            });

            html += "</tbody></table></div>";

            resultDiv.innerHTML = html;
          }

